@model AddCustomerFormModel
@{
    ViewBag.Title = "Add new Custommer";
}

<div class="col-6 offset-3 section-bg" data-aos="fade-up">
    <h2 class="heading-margin text-center">@ViewBag.Title</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="RegistrationNumber">Registration Number</label>
            <input asp-for="RegistrationNumber" class="form-control" placeholder="The Firm registration number ">
            <span asp-validation-for="RegistrationNumber" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="The Firm name">
            <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VAT">VAT</label>
            <input asp-for="VAT" class="form-control" >
            <span asp-validation-for="VAT" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OwnerName">CEO</label>
            <input asp-for="OwnerName" class="form-control" >
            <span asp-validation-for="OwnerName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="The PhoneNumber of the firm/owner">
            <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" >
            <span asp-validation-for="Email" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Url">Url</label>
            <input asp-for="Url" class="form-control" >
            <span asp-validation-for="Url" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" placeholder="The Firm Address">
            <span asp-validation-for="Address" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Town">Town</label>
            <input asp-for="Town" class="form-control" >
            <span asp-validation-for="Town" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country">Country</label>
            <input asp-for="Country" class="form-control" >
            <span asp-validation-for="Country" class="small text-danger"></span>
        </div>

        <input class="btn btn-primary" type="submit" value="Save" />
    </form>

    <br/>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

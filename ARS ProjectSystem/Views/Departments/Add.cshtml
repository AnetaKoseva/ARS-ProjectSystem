@model ARS_ProjectSystem.Models.Departments.AddDepartmentFormModel
@{
    ViewData["Title"] = "Add Department";
}

<div class="col-6 offset-2">
    <h2 class="heading-margin text-center">Add new Department</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="DepartmentName">DepartmentName</label>
            <input asp-for="DepartmentName" class="form-control" placeholder="The Department name">
            <span asp-validation-for="DepartmentName" class="small text-danger"></span>
        </div>
        <input class="btn btn-primary" type="submit" value="Save" />
    </form>
</div>


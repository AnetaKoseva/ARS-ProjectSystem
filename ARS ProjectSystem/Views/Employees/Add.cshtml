@model EmployeeFormModel
@{
    ViewBag.Title = "Add new Employee";
}

<div class="col-6 offset-3">
    <h2 class="heading-margin text-center">@ViewBag.Title</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.FirstName">First Name</label>
            <input asp-for="@Model.FirstName" class="form-control">
            <span asp-validation-for="@Model.FirstName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.LastName">Last Name</label>
            <input asp-for="@Model.LastName" class="form-control">
            <span asp-validation-for="@Model.LastName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Jobtitle">Job Title</label>
            <input asp-for="@Model.Jobtitle" class="form-control">
            <span asp-validation-for="@Model.FirstName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DepartmentName">Department Name</label>
            <input asp-for="@Model.DepartmentName" class="form-control">
            <span asp-validation-for="@Model.DepartmentName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.CustomerRegistrationNumber">Customer</label>
            <select asp-for="@Model.CustomerRegistrationNumber" class="form-control">
                @foreach (var customer in Model.Customers)
                {
                    <option value="@customer.RegistrationNumber">@customer.Name</option>
                }
            </select>
        </div>
        <input class="btn btn-primary" type="submit" value="Save" />
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


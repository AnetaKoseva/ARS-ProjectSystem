@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@model ContactFormModel
@{
    ViewBag.Title = "Contact";
}
<!-- ======= Contact Section ======= -->
<section id="contact" class="contact section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h3><span>Contact Us</span></h3>
            <div class="social-links mt-3">
                <a href="https://twitter.com/ARS_Consult" class="twitter"><i class="bx bxl-twitter"></i></a>
                <a href="https://www.facebook.com/arsconsult.eu/" class="facebook"><i class="bx bxl-facebook"></i></a>
                <a href="https://www.linkedin.com/company/applied-research-solutoins/?viewAsMember=true" class="linkedin"><i class="bx bxl-linkedin"></i></a>
            </div>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-4 col-md-6">
                <div class="info-box mb-4">
                    <i class="bx bx-map"></i>
                    <h3>Our Address</h3>
                    <p>121 P.Evtimii, 6000 Stara Zagora, Bulgaria</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="info-box  mb-4">
                    <i class="bx bx-envelope"></i>
                    <h3>Email Us</h3>
                    <p>office@ars-consult.eu</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="info-box  mb-4">
                    <i class="bx bx-phone-call"></i>
                    <h3>Call Us</h3>
                    <p>+359877778827</p>
                </div>
            </div>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-12">
                <form method="post">
                    <div class="form-row">
                        <div class="col form-group">
                            <input asp-for="Name" class="form-control" placeholder="Your Name" />
                            <span asp-validation-for="Name" class="small text-danger"></span>
                        </div>
                        <div class="col form-group">
                            <input asp-for="Email" class="form-control" placeholder="Your Email" />
                            <span asp-validation-for="Email" class="small text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input asp-for="Subject" class="form-control" placeholder="Subject" />
                        <span asp-validation-for="Subject" class="small text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" asp-for="Message" rows="4" placeholder="Message"></textarea>
                        <span asp-validation-for="Message" class="small text-danger"></span>
                    </div>
                    <input type="hidden" id="RecaptchaValue" name="RecaptchaValue" />
                    <button type="submit" class="btn btn-primary">Send</button>.
                </form>

            </div>
        </div>
    </div>
</section><!-- End Contact Section -->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js?render=@this.Configuration["GoogleReCaptcha:Key"]"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('@this.Configuration["GoogleReCaptcha:Key"]', { action: 'submit' }).then(function (token) {
                document.getElementById("RecaptchaValue").value = token;
            });
        });
    </script>
}


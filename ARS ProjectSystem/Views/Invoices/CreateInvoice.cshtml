@model InvoiceFormModel
@{
    ViewBag.Title = "Add new Invoice";
}

<div class="col-6 offset-3 section-bg" data-aos="fade-up">
    <h2 class="heading-margin text-center">@ViewBag.Title</h2>
    <form method="post" asp-action="CreateInvoice">
        <div class="form-floating mb-3">
            
            <div class="form-group">
                <label asp-for="CreatedOn">Created On</label>
                <input type="date"asp-for="CreatedOn" class="form-control" >
                <span asp-validation-for="CreatedOn" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate"> Due Date</label>
                <input type="date" asp-for="DueDate" class="form-control" placeholder="ddmmyyyy">
                <span asp-validation-for="DueDate" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item"></label>
                <input asp-for="Item" class="form-control">
                <span asp-validation-for="Item" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control">
                <span asp-validation-for="Quantity" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
        </div>
        <input class="btn btn-primary" type="submit"  value="Save" />
    </form>
    <br/>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

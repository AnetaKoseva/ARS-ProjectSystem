@model List<InvoiceFormModel>
<div class=" table">
    <h2 class="heading-margin text-center">All Invoices</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">CustomerName</th>
                <th scope="col">VAT</th>
                <th scope="col">Item</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
                @if (User.Identity.IsAuthenticated && User.IsAdmin())
                {
                    <th scope="col">Action</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.CustomerName</td>
                    <td>@invoice.CustomerVAT</td>
                    <td>@invoice.Item</td>
                    <td>@invoice.Quantity</td>
                    <td>@invoice.Total</td>
                    @if (User.Identity.IsAuthenticated && User.IsAdmin())
                    {
                <td>
                    
                    <a asp-controller="Invoices" asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-light btn-sm">Edit</a>
                    <a asp-controller="Invoices" asp-action="Delete" asp-route-id="@invoice.Id" class="btn btn-light btn-sm">Delete</a>
                </td>
                    }

                </tr>
            }
        </tbody>
    </table>
    <a href="/Customers/All" class="btn btn-primary btn-sm mb-3">Back</a>
</div>

